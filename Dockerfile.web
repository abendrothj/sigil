# Dockerfile for Basilisk Web UI
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY web-ui/package.json web-ui/package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source code
COPY web-ui/ ./

# Build Next.js application
RUN npm run build

# Expose web port
EXPOSE 3000

# Set environment variable for API URL
ENV NEXT_PUBLIC_API_URL=http://localhost:5000

# Run Next.js
CMD ["npm", "start"]
